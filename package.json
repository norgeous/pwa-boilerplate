{
  "name": "pwa",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "author": "Daniel Harte",
  "engines": {
    "node": ">=20.1.0",
    "npm": ">=9.6.6"
  },
  "workspaces": [
    "packages/*",
    "projects/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev": "npm i && npm run dev -w projects/vite-experiment",
    "prod": "npm run build -w packages/server && npm run start -w packages/server",
    "outdated": "npm outdated",
    "lint": "eslint . --fix && prettier --log-level silent --write \"**/*.{js,mdx,md,json}\" && tsc"
  },
  "dependencies": {
    "eslint-plugin-functional": "^6.0.0"
  },
  "devDependencies": {
    "@pwa/lint-config": "*",
    "husky": "^8.0.3"
  },
  "lint-staged": {
    "*.js,*.ts": "eslint --fix",
    "*.{js,ts,mdx,md,json}": "prettier --log-level silent --write"
  }
}
